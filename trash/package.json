{
  "name": "google-jobs-scraper",
  "version": "1.0.0",
  "description": "A project for scraping job listings from Google Job Search using Playwright.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:playwright": "npx playwright test"
  },
  "keywords": [
    "scraper",
    "google",
    "jobs",
    "playwright"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "@playwright/test": "^1.40.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
